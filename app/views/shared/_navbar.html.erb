<div class="navbar navbar-expand-lg navbar-dark navbar-custom static-top ">
  <div class="header-container">
    <%= link_to "Star Shoutouts", root_path , class: "navbar-brand navbar-logo-font" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Browse Talent", users_path, class: "nav-link current_class?(users_path)" %>
          </li>
          <li class="nav-item">
            <% if current_user.star == true %>
              <%= link_to "Bookings", star_dashboard_path, class: "nav-link" %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "My Requests", user_dashboard_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo? %>
              <%= cl_image_tag current_user.photo.url(:bright_face), class: "avatar dropdown-toggle ml-3", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1447433693259-c8549e937d62?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60", class: "avatar dropdown-toggle ml-3", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.star == true %>
                <%= link_to "My Profile", current_user, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Edit My Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <button class="purple-button-sm"><%= link_to "Login", new_user_session_path %></button>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>