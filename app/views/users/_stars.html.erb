<% @users.each do |user| %>
  <div class="user-card mb-3">
    <%= link_to user_path(user) do %>
      <%= cl_image_tag user.photo.url(:face)%>
    <% end %>
    <div class="user-infos">
      <div>
        <p class="p2"><%= link_to user.name, user_path(user) %></p>
        <p class="p1 font-italic">"<%= user.bio %>"</p>
        <ul class="list-inline tags mt-4">
          <p class="p1 font-weight-bold">Tags:</p>
          <% user.tag_list.each do |tag| %><%= tag %>
            <li class="list-inline-item">
            </li>
          <% end %>
        </div>
        <i class="far fa-heart"></i>
      </div>
    </div>
  <% end %>
