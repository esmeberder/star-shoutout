<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="info col-md-12">
        <div class="profile-card">
          <div class="row">
            <div class="col-md-6">
              <%= image_tag 'angelina_jolie.jpg', class:"profile-img" %>
              <!-- <img src="https://www.hellomagazine.com/imagenes/film/2019073075915/angelina-jolie-shocks-with-announcement-about-career/0-368-501/angelina-jolie-shocking-news-t.jpg" alt=""> -->
            </div>
            <div class="col-md-6">
              <div class="star-info">
                <p>Star's name: <%= @user.name %></p>
                <p>Star's tags</p>
                <p>Star's bio: <%= @user.bio %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <h3>Services:</h3>
            <% @services.each do |service| %>
              <button class="purple-button-md"><%= link_to "Book #{service.title} #{service.price} RMB", new_service_booking_path(service) %></button>
              <% if policy(service).edit? %>
                <%= link_to "Update", edit_service_path(service) %>
              <% end %>
              <% if policy(service).destroy? %>
                <%= link_to "Delete", service_path(service), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="videos col-md-12">
        <div class="row">
          <div class="col-md-2">
          </div>
          <div class="col-md-8">
            <h1>Lastest Shoutouts</h1>
            <p>---------------------------------------------------------------------------</p>
          </div>
        </div>
      </div>
      <div class="card-container col-md-12">
        <div class="user-card">
          <img src="http://n.sinaimg.cn/ent/transform/20170830/YTrt-fykkfat2498787.jpg" alt="">
          <div class="user-infos">
            <div>
              <h2 class="p2">Made for Okipooamorn</h2>
            </div>
          </div>
        </div>
        <div class="user-card">
          <img src="http://n.sinaimg.cn/ent/transform/20170830/YTrt-fykkfat2498787.jpg" alt="">
          <div class="user-infos">
            <div>
              <h2 class="p2">Made for Okipooamorn</h2>
            </div>
          </div>
        </div>
      </div>
      <div class="videos col-md-12">
        <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-8">
            <h2>Related</h2>
          </div>
        </div>
      </div>
      <div class="card-container col-md-12">
        <div class="user-card">
          <img src="http://n.sinaimg.cn/ent/transform/20170718/SljZ-fyiakwm1136299.jpg" alt="">
          <div class="user-infos">
            <div>
              <p class="p2">name</p>
              <p class="p1">Bio: </p>
            </div>
            <i class="far fa-heart"></i>
          </div>
        </div>
        <div class="user-card">
          <img src="http://n.sinaimg.cn/ent/transform/20170718/SljZ-fyiakwm1136299.jpg" alt="">
          <div class="user-infos">
            <div>
              <p class="p2">name</p>
              <p class="p1">Bio: </p>
            </div>
            <i class="far fa-heart"></i>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="row">
          <% if @user == current_user %>
            <button class="purple-button-md">
              <%= link_to "Add a new service", new_service_path%>
            </button>
          <% end  %>
        </div>
        <button class="purple-button-md">
          <%= link_to "Back to all stars", users_path%>
        </button>
      </div>
    </div>
  </div>
</div>